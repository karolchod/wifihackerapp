<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityThird">

    <TextView
            android:id="@+id/LamanieHasla_text"
            android:layout_width="259dp"
            android:layout_height="88dp"
            android:gravity="center"
            android:text="Trwa łamanie hasła..."
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.161"
            app:layout_constraintHorizontal_bias="0.504" />

    <Button
            android:id="@+id/Dalej_button"
            android:layout_width="204dp"
            android:layout_height="137dp"
            android:text="Dalej"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.749" />

    <TextView
            android:text="--------"
            android:layout_width="251dp"
            android:layout_height="41dp"
            android:id="@+id/aktualneHasloText"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LamanieHasla_text"
            android:layout_marginTop="40dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.502" />

    <TextView
            android:text="stan"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:id="@+id/connectionStatusText"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:id="@+id/progressBar1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.725"
            app:layout_constraintHorizontal_bias="0.501"

            />

</androidx.constraintlayout.widget.ConstraintLayout>